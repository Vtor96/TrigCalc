<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="11dp"
        android:text="Trigonometric Calculator"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Vvod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Vvod"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Vyvod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:onClick="onButtonClick"
        android:text="Sin"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Cos"
        app:layout_constraintEnd_toStartOf="@+id/Tg"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:onClick="onButtonClick"
        android:text="Cos"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Grad"
        app:layout_constraintEnd_toStartOf="@+id/Ctg"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Tg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:onClick="onButtonClick"
        android:text="Tg"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Ctg"
        app:layout_constraintEnd_toStartOf="@+id/Log"
        app:layout_constraintStart_toEndOf="@+id/Sin" />

    <Button
        android:id="@+id/Log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="7dp"
        android:onClick="onButtonClick"
        android:text="Log(2)"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Lg"
        app:layout_constraintEnd_toStartOf="@+id/P"
        app:layout_constraintStart_toEndOf="@+id/Tg" />

    <Button
        android:id="@+id/znak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="278dp"
        android:onClick="onSmenaClick"
        android:text="±"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Clear"
        app:layout_constraintStart_toEndOf="@+id/Rad" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="115dp"
        android:layout_height="41dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="13dp"
        android:text="X = "
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/Vvod"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="18dp"
        android:text="Result:"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Sin"
        app:layout_constraintEnd_toStartOf="@+id/Vyvod"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Vyvod"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="67dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/Vvod" />

    <Button
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="278dp"
        android:onClick="onClearClick"
        android:text="C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/znak" />

    <Button
        android:id="@+id/Grad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="278dp"
        android:onClick="onCheckClick"
        android:text="Deg"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Rad"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Rad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="278dp"
        android:onClick="onCheckClick"
        android:text="Rad"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/znak"
        app:layout_constraintStart_toEndOf="@+id/Grad" />

    <Button
        android:id="@+id/P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:onClick="onStuticClick"
        android:text="π"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Log"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Ctg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:onClick="onButtonClick"
        android:text="Ctg"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Grad"
        app:layout_constraintEnd_toStartOf="@+id/Lg"
        app:layout_constraintStart_toEndOf="@+id/Cos" />

    <Button
        android:id="@+id/Lg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onButtonClick"
        android:text="Log(10)"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/znak"
        app:layout_constraintEnd_toStartOf="@+id/E"
        app:layout_constraintStart_toEndOf="@+id/Ctg" />

    <Button
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="330dp"
        android:onClick="onStuticClick"
        android:text="e"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Lg"
        app:layout_constraintTop_toBottomOf="@+id/Vyvod" />

    <CheckBox
        android:id="@+id/Gradus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"
        android:checked="false"
        android:text="Gradus"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/Grad"
        app:layout_constraintTop_toBottomOf="@+id/Grad" />

    <CheckBox
        android:id="@+id/Radian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="Radian"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/znak"
        app:layout_constraintTop_toBottomOf="@+id/Clear" />

</android.support.constraint.ConstraintLayout>